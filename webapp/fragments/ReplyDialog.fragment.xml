<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
	<Dialog contentWidth="30%" showHeader="false">
		<content>
			<l:VerticalLayout class="sapUiResponsiveContentPadding " width="100%">
				<Title text="Reply to QPR" level="H1"/>
				<TextArea value="{detailViewModel>/replyComment}" width="100%" rows="8" placeholder="Comments...."/>
				<HBox>
					<u:FileUploader fileType="pdf" useMultipart="true" uploadComplete="handleUploadComplete" change="handleValueChange" sendXHR="true"
						buttonOnly="true" buttonText="Choose File"
						uploadUrl="{detailViewModel>/uploadURL}"/>
					<Text class="sapUiSmallMarginBegin sapUiSmallMarginTop" text="{detailViewModel>/fileName}"/>
				</HBox>
			</l:VerticalLayout>
		</content>
		<buttons>
			<Button text="Send" type="Accept" press="onPressOKDilog"/>
			<Button text="Cancel" press="onPressCloseDilog" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>